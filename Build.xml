<?xml version="1.0" encoding="UTF-8"?>
<project name="Build PEN" default="build" basedir=".">
	
	<property name="javacchome.dir" value="C:\Program Files\Java\j2sdk\bin\lib\" />
	<property name="target.jjt" value="IntVParser.jjt" />
	<property name="target.jj" value="IntVParser.jj" />

	<property name="source.dir" value="./" />
	<property name="javadoc.dir" value="./docs" />

	<target name="build" depends="compile" />
	
	<target name="javadoc">
		<delete dir="${javadoc.dir}" />
		<javadoc
			encoding="UTF-8"
			destdir="${javadoc.dir}"
			access="public"
			source="1.5"
			linksource="true"
			use="true"
			notree="false"
			nonavbar="false"
			noindex="false"
			splitindex="true"
			author="true"
			version="true"
			nodeprecatedlist="false"
			nodeprecated="false"
			sourcepath="${source.dir}"
			classpath="${source.dir}/bin"
		>
		<link href="http://java.sun.com/j2se/1.5.0/ja/docs/ja/api/"/>
		<fileset dir="${source.dir}"/>
		</javadoc>
	</target>

	<target name="jjtree">
		<jjtree
			javacchome="${javacchome.dir}" 
			target="${target.jjt}" 
			outputdirectory="${source.dir}"
		/>
	</target>

	<target name="javacc">
		<javacc
			javacchome="${javacchome.dir}"
			target="${target.jj}"
			outputdirectory="${source.dir}"
		/>
	</target>
	
	<target name="compile">
		<javac
			destdir="${source.dir}"
			srcdir="${source.dir}"
			encoding="UTF-8"
			debug="true"
		/>
	</target>
	
	<target name="run">
		<java classname="PEN" fork="true">
			<arg line="-d"/>
		</java>
	</target>

</project>
